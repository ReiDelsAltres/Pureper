{
  "ReButton": {
    "name": "ReButton",
    "description": "Настраиваемая кнопка с различными вариантами оформления",
    "tag": "re-button",
    "attributes": {
      "variant": {
        "type": "select",
        "options": ["filled", "outlined", "text"],
        "default": "filled",
        "description": "Вариант оформления кнопки"
      },
      "color": {
        "type": "select",
        "options": ["primary", "secondary", "tertiary", "additional", "success", "warning", "error", "info"],
        "default": "primary",
        "description": "Цветовая схема кнопки"
      },
      "size": {
        "type": "select",
        "options": ["small", "medium", "large"],
        "default": "medium",
        "description": "Размер кнопки"
      },
      "icon": {
        "type": "select",
        "options": ["", "home", "user", "search", "star", "palette", "send", "thumb_up", "heart"],
        "default": "",
        "description": "Иконка кнопки"
      },
      "type": {
        "type": "select",
        "options": ["button", "submit", "reset"],
        "default": "button",
        "description": "Тип кнопки"
      },
      "href": {
        "type": "text",
        "placeholder": "https://example.com",
        "description": "Ссылка (превращает кнопку в ссылку)"
      },
      "disabled": {
        "type": "checkbox",
        "default": false,
        "description": "Отключенное состояние"
      },
      "loading": {
        "type": "checkbox",
        "default": false,
        "description": "Состояние загрузки"
      },
      "full-width": {
        "type": "checkbox",
        "default": false,
        "description": "Кнопка на всю ширину"
      }
    },
    "slots": {
      "default": "Текст кнопки",
      "icon": "<svg-icon icon=\"user\" size=\"sm\"></svg-icon>"
    },
    "examples": [
      {
        "name": "Обычная кнопка",
        "config": { "variant": "filled", "color": "primary", "size": "medium" },
        "content": "Нажми меня"
      },
      {
        "name": "С иконкой",
        "config": { "variant": "outlined", "color": "secondary", "size": "large", "icon": "send" },
        "content": "Отправить"
      },
      {
        "name": "Отключенная",
        "config": { "variant": "text", "color": "tertiary", "size": "small", "disabled": true },
        "content": "Недоступно"
      },
      {
        "name": "Загрузка",
        "config": { "variant": "filled", "color": "primary", "size": "medium", "loading": true },
        "content": "Сохранить"
      }
    ]
  },
  "SvgIcon": {
    "name": "SvgIcon",
    "description": "SVG иконка с настраиваемыми размерами и цветами",
    "tag": "svg-icon",
    "attributes": {
      "icon": {
        "type": "select",
        "options": ["home", "user", "search", "star", "palette", "send", "thumb_up", "heart", "settings", "menu", "close", "arrow-left", "arrow-right"],
        "default": "home",
        "description": "Тип иконки"
      },
      "size": {
        "type": "select",
        "options": ["xs", "sm", "md", "lg", "xl"],
        "default": "md",
        "description": "Размер иконки"
      },
      "color": {
        "type": "select",
        "options": ["primary", "secondary", "tertiary", "success", "warning", "error", "info", "text"],
        "default": "primary",
        "description": "Цвет иконки"
      },
      "fill": {
        "type": "text",
        "placeholder": "#000000",
        "description": "Кастомный цвет заливки"
      },
      "stroke": {
        "type": "text",
        "placeholder": "#000000",
        "description": "Цвет обводки"
      },
      "stroke-width": {
        "type": "number",
        "placeholder": "2",
        "description": "Толщина обводки"
      },
      "hover": {
        "type": "checkbox",
        "default": false,
        "description": "Эффект при наведении"
      },
      "clickable": {
        "type": "checkbox",
        "default": false,
        "description": "Кликабельность"
      },
      "viewbox": {
        "type": "text",
        "placeholder": "0 0 24 24",
        "description": "Область отображения SVG"
      }
    },
    "examples": [
      {
        "name": "Маленькая иконка",
        "config": { "icon": "home", "size": "sm", "color": "primary" }
      },
      {
        "name": "Большая иконка",
        "config": { "icon": "star", "size": "xl", "color": "warning" }
      },
      {
        "name": "Кликабельная иконка",
        "config": { "icon": "heart", "size": "lg", "color": "error", "hover": true, "clickable": true }
      }
    ]
  },
  "ColorPalette": {
    "name": "ColorPalette",
    "description": "Компонент для отображения цветовой палитры",
    "tag": "color-palette",
    "attributes": {
      "palette": {
        "type": "select",
        "options": ["BASIC", "MUD_BLAZOR"],
        "default": "BASIC",
        "description": "Выбор цветовой палитры"
      }
    },
    "examples": [
      {
        "name": "Базовая палитра",
        "config": { "palette": "BASIC" }
      },
      {
        "name": "MudBlazor палитра",
        "config": { "palette": "MUD_BLAZOR" }
      }
    ]
  }
}